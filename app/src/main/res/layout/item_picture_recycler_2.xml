<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recycler_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <com.yitouwushui.imagemi.view.RoundImageView
        android:id="@+id/img_selected"
        android:layout_width="@dimen/item_selection_size"
        android:layout_height="@dimen/item_selection_size"
        android:layout_alignBottom="@+id/img_picture"
        android:layout_alignEnd="@+id/img_picture"
        android:layout_margin="@dimen/item_selection_image_margin"
        android:alpha="0.5"
        android:visibility="gone"
        android:src="@drawable/select_no"
        app:type="circle" />

</RelativeLayout>